@model List<BackSpotGay.Models.Post>

@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8"> 
        <link rel="stylesheet" href="~/css/stile.css">
        <link rel="icon" href="~/image/spot-a-gay.svg">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
        <title>Spot-a-gay</title>
    </head>
    <body>  
    <div class="newspaper">
    @foreach (var f in Model)
    {
        <div class="new">
            <p style="text-align: center;"><img src="@Url.Content(f.TextPath)" alt="" width="300" height="300"/></p>
            <p style="text-align: center;">@f.TextPost</p>
        </div>
    }
    </div>
   
    </body>
</html>